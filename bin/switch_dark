#!/usr/bin/env python

import xml.etree.ElementTree as ET
import sys

tree = ET.parse(sys.argv[1])
root = tree.getroot()

for g in root.findall('{http://www.w3.org/2000/svg}g'):
    if g.attrib['{http://www.inkscape.org/namespaces/inkscape}label'] == 'Regular':
        g.attrib['style'] = 'display:none'
    if g.attrib['{http://www.inkscape.org/namespaces/inkscape}label'] == 'Dark':
        g.attrib['style'] = 'display:inline'
        for subg in g.findall('{http://www.w3.org/2000/svg}g'):
            if subg.attrib['{http://www.inkscape.org/namespaces/inkscape}label'] == 'Dark test background':
                subg.attrib['style'] = 'display:none'

tree.write(sys.argv[2])
